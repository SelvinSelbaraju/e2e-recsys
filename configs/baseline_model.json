{
    "features": {
        "categorical": [
            "product_type_name",
            "product_group_name",
            "colour_group_name",
            "department_name",
            "club_member_status"
        ],
        "quantitative": [
            "price",
            "age"
        ],
        "target_col": "p_purchased"
    },
    "architecture_config": {
        "hidden_units": [4,2],
        "activation": "ReLU",
        "output_transform": "Sigmoid"
    },
    "hyperparam_config": {
        "train_batch_size": 2,
        "validation_batch_size": 2,
        "shuffle": false,
        "optimizer": {
            "type": "SGD"
        },
        "loss_function": "BCELoss"
    },
    "training_config": {
        "epochs": 2,
        "metrics": {
            "binary_accuracy": "acc",
            "binary_auroc": "auc"
        }
    }
}
